      mqttClient.publish("210134C-Medibox-ct-factor", ctrl_factor);
      mqttClient.publish("210134C-Medibox-min-angle", min_angle);
    }
    else
    {
      Serial.println("failed");
      Serial.println(mqttClient.state());
      delay(500);
    }
  }
}

/**
 *  Callback function for receiving MQTT messages.
 *  It handles the received messages and updates the control factor and minimum angle values.
 *  topic - The topic of the received message.
 *  payload - The payload of the received message.
 *  length - The length of the payload.
 */
void receiveCallBack(char *topic, byte *payload, unsigned int length)
{
  Serial.print("Message Arrived [");
  Serial.print(topic);
  Serial.print("]");

  char payloadCharAr[length];

  for (int i = 0; i < length; i++)
  {
    Serial.print((char)payload[i]);
    payloadCharAr[i] = (char)payload[i];
  }

  Serial.println();

  if (strcmp(topic, "210134C-Medibox-ct-factor") == 0)
  {
    controlling_factor = atof(payloadCharAr);
    Serial.println(controlling_factor);
    servo_controller();
  }
  else if (strcmp(topic, "210134C-Medibox-min-angle") == 0)
  {
    angle_offset = atof(payloadCharAr);
    Serial.println(angle_offset);
    servo_controller();
  }
  else if (strcmp(topic, "210134C-Medibox-alarm-1") == 0)
  {
    if (payloadCharAr[0] == '1')
    {
      alarm_triggered[0] = true;
      alarm_enabled = true;
    }
    else
    {
      alarm_triggered[0] = false;
      if (!(alarm_triggered[1] || alarm_triggered[2]))
      {
        alarm_enabled = false;
      }
    }
  }
  else if (strcmp(topic, "210134C-Medibox-alarm-2") == 0)
  {
    if (payloadCharAr[0] == '1')
    {
      alarm_triggered[1] = true;
      alarm_enabled = true;
    }
    else
    {
      alarm_triggered[1] = false;
      if (!(alarm_triggered[0] || alarm_triggered[2]))
      {
        alarm_enabled = false;
      }
    }
  }
  else if (strcmp(topic, "210134C-Medibox-alarm-3") == 0)
  {
    if (payloadCharAr[0] == '1')
    {
      alarm_triggered[2] = true;
      alarm_enabled = true;
    }
    else
    {
      alarm_triggered[2] = false;
      if (!(alarm_triggered[1] || alarm_triggered[0]))
      {
        alarm_enabled = false;
      }
    }
  }
}

/**
 *  Function to measure the light intensity using LDR sensors.
 *  It reads the analog values from the sensors and calculates the light intensity.
 *  It publishes the light intensity value to the MQTT broker.
 */
void measure_light_intensity()
{
  analogReadResolution(10); // Set the resolution to 12 bits (0-4095)
  right_intensity = analogRead(LDR_RIGHT);
  left_intensity = analogRead(LDR_LEFT);

  right_intensity = 1 - (right_intensity / 1023); // esp32 ADC resolution is 12bits therefore the input is divided by 2^12-1
  left_intensity = 1 - (left_intensity / 1023);

  Serial.println("Left light intensity : " + String(left_intensity));
  Serial.println("Right light intensity : " + String(right_intensity));

  char light_intensity[6];

  if (left_intensity >= right_intensity)
  {
    String(left_intensity).toCharArray(light_intensity, 6);
  }
  else
  {
    String(right_intensity).toCharArray(light_intensity, 6);
  }
  mqttClient.publish("210134C-Medibox-light-intensity", light_intensity);
}

/**
 *  Function to control the servo motor based on the light intensity.
 *  It calculates the desired angle based on the control factor, minimum angle, and light intensity.
 *  It sets the servo angle to the calculated value.
 */
void servo_controller()
{
  float D = 0;
  if (left_intensity > 0.95)
  {
    D = 1.5;
  }
  else if (right_intensity > 0.95)
  {
    D = 0.5;
  }
  int angle = min(int((angle_offset * D) + ((180 - angle_offset) * max(left_intensity, right_intensity) * controlling_factor)), 180);
  servo.write(angle);
}

